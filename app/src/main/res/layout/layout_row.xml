<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/msgtesto"
        android:textSize="@dimen/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="@dimen/text_item_padding"
        android:text="Lorem ipsum"/>
    <TextView
        android:id="@+id/msgora"
        android:textSize="@dimen/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/msgdata"
        android:layout_below="@+id/msgtesto"
        android:text="et earum"/>
    <TextView
        android:id="@+id/msgdata"
        android:textSize="@dimen/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/msgtesto"
        android:text="qualitate"/>

</RelativeLayout>